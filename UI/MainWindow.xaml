<Window x:Class="ClientSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск клиента" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Поиск клиента" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Поиск по ФИО -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="ФИО:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="FioSearchTextBox" VerticalAlignment="Center" Margin="0,0,5,5" Padding="3"
                 TextChanged="OnSearchTextChanged"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Найти" Click="SearchButton_Click" Margin="0,0,0,5" Padding="10,3"/>

        <!-- Поиск по паспорту -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Паспорт:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="PassportSearchTextBox" VerticalAlignment="Center" Margin="0,0,5,5" Padding="3"
                 TextChanged="OnSearchTextChanged"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Найти" Click="SearchButton_Click" Margin="0,0,0,5" Padding="10,3"/>

        <!-- Поиск по номеру карты -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Номер карты:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="CardSearchTextBox" VerticalAlignment="Center" Margin="0,0,5,5" Padding="3"
                 TextChanged="OnSearchTextChanged"/>
        <Button Grid.Row="3" Grid.Column="2" Content="Найти" Click="SearchButton_Click" Margin="0,0,0,5" Padding="10,3"/>

        <!-- Результаты поиска -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Результаты:" VerticalAlignment="Top" Margin="0,10,5,0"/>
        <ListView Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="SearchResultsListView" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" Width="120" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Паспорт" Width="100" DisplayMemberBinding="{Binding PassportNumber}"/>
                    <GridViewColumn Header="Номер карты" Width="100" DisplayMemberBinding="{Binding CardNumber}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статус -->
        <TextBlock Grid.Row="5" Grid.ColumnSpan="3" x:Name="StatusTextBlock" Margin="0,10,0,0" Foreground="Gray"/>
    </Grid>
</Window>