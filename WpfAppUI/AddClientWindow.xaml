<Window x:Class="WpfAppUI.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление клиента" Height="511" Width="527"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Добавление нового клиента" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" HorizontalAlignment="Right" Width="87"><Run Language="ru-ru" Text="ФИО"/><Run Text=":"/></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="FullNameTextBox" Margin="0,0,0,5" Padding="3"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,5,5"><Run Language="ru-ru" Text="Дата рождения"/><Run Text=":"/></TextBlock>
        <DatePicker Grid.Column="1" x:Name="Datapicker" HorizontalAlignment="Left" Margin="1,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Телефон:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="PhoneTextBox" Margin="0,0,0,5" Padding="3"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Email:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="EmailTextBox" Margin="0,0,0,5" Padding="3"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Основной документ:" Margin="0,10,5,5"/>
        <ComboBox x:Name="ComboBox" Margin="0,1,5,5" Grid.Row="6" Grid.Column="1" />

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Серия:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="6" x:Name="PSeries" Margin="118,30,1,5" Padding="3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox Grid.Row="8" Grid.Column="0" Text="Номер:" Margin="0,0,0,5" BorderBrush="{x:Null}"/>
        <TextBox Grid.Row="7" x:Name="PNum" Margin="118,24,1,5" Padding="3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox Grid.Row="9" Grid.Column="0" Text="Дата выдачи:" Margin="0,0,0,5" BorderBrush="{x:Null}"/>
        <DatePicker Grid.Column="1" x:Name="Datapicker2" HorizontalAlignment="Left" Margin="0,27,0,0" Grid.Row="8" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox Grid.Row="10" Grid.Column="0" Text="Код подразделения:" Margin="0,0,341,88" Grid.ColumnSpan="2" BorderBrush="{x:Null}"/>
        <TextBox Grid.Row="10" Grid.Column="1" x:Name="KP" Margin="0,0,0,88" Padding="3"/>

        <StackPanel Grid.Row="11" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Отмена" Click="CancelButton_Click" Margin="0,0,10,0" Padding="10,5" Width="80"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Padding="10,5" Width="80" Background="#FF4CAF50" Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>
