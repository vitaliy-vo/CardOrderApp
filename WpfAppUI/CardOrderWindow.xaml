<Window x:Class="WpfAppUI.CardOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Card" Height="733" Width="617"
        WindowStartupLocation="CenterScreen">



    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,3"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5,8,5,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Card Order Form" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,0,0,15" Foreground="#2C3E50"/>

        <!-- Customer Information -->
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Customer Information" 
                  Margin="5" Padding="10">
            <StackPanel>
                <TextBlock Text="Full Name"/>
                <TextBox x:Name="TextBoxFullName"/>

                <TextBlock Text="Email"/>
                <TextBox x:Name="TextBoxCustomerEmail"/>

                <TextBlock Text="Phone"/>
                <TextBox x:Name="TextBoxCustomerPhone"/>
            </StackPanel>
        </GroupBox>

        <!-- Card Selection -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Card Selection" 
                  Margin="5" Padding="10">
            <StackPanel>
                <TextBlock Text="Payment System"/>
                <ComboBox x:Name="ComboBoxPaymentSystems"
                          ItemsSource="{Binding PaymentSystems}"
                          SelectedItem="{Binding SelectedPaymentSystem}"
                          DisplayMemberPath="."
                          IsEditable="False"/>
                <TextBlock Text="{Binding PaymentSystems.Count, StringFormat='Количество ПС: {0}'}" 
                           FontSize="10" Foreground="Gray"/>

                <TextBlock Text="Card Type"/>
                <ComboBox ItemsSource="{Binding AvailableCardTypes}"
                          SelectedItem="{Binding SelectedCardType}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="120"/>
                                <TextBlock Text="{Binding Type}" Foreground="Gray" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Selected Card Details -->
                <Border Background="#F8F9FA" Margin="0,10,0,0" Padding="10" 
                        CornerRadius="5" BorderThickness="1" BorderBrush="#DEE2E6">
                    <StackPanel>
                        <TextBlock Text="Selected Card" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedCardType.Name}" 
                                   FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding SelectedCardType.PaymentSystem}" 
                                   FontSize="11" Foreground="#7F8C8D"/>
                        <TextBlock Text="{Binding SelectedCardType.Type}" 
                                   FontSize="11" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TextBlockCardTypeId" Text="{Binding SelectedCardType.Id}" 
                                   FontSize="11" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="Comments" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,5"/>
                <TextBox Name="TextBlockCommetsCard" Height="59"></TextBox>
            </StackPanel>
        </GroupBox>

        <!-- Order Summary -->
        <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header="Order Summary" 
                  Margin="5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Order Status:" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Text="{Binding OrderStatus}" 
                           VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="2" Text="{Binding OrderDateTime}" 
                           VerticalAlignment="Center" FontStyle="Italic"/>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Clear" Command="{Binding ClearCommand}" 
                    Background="#95A5A6" Foreground="White" MinWidth="80"/>
            <Button Content="Submit Order" Click="CreateOrder"
                    Background="#27AE60" Foreground="White" MinWidth="100"
                    IsEnabled="{Binding CanSubmitOrder}"/>
        </StackPanel>
    </Grid>
</Window>
