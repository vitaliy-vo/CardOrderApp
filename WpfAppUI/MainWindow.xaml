<Window x:Class="WpfAppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск клиента" Height="436" Width="1008"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Управление клиентами" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Поиск по ФИО -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="ФИО:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="FioSearchTextBox" VerticalAlignment="Center" Margin="0,0,5,5" Padding="3"
                 />
        <Button Grid.Row="1" Grid.Column="2" Content="Найти" Click="SearchButton_Click" Margin="0,0,0,5" Padding="10,3"/>

        <!-- Поиск по паспорту -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Паспорт:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="PassportSearchTextBox" VerticalAlignment="Center" Margin="0,0,5,5" Padding="3"
                 />
        <Button Grid.Row="2" Grid.Column="2" Content="Найти" Click="SearchButton_Click" Margin="0,0,0,5" Padding="10,3"/>

      

        <!-- Кнопка добавления клиента -->
        <Button Grid.Row="4" Grid.Column="2" Content="Добавить клиента" Click="AddClientButton_Click" 
                Margin="0,10,0,10" Padding="10,5" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>

        <!-- Результаты поиска -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Результаты:" VerticalAlignment="Top" Margin="0,10,5,0"/>
        <ListView Grid.Row="4" Grid.Column="1" x:Name="SearchResultsListView" Margin="0,10,5,0" Grid.ColumnSpan="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" Width="150" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Серия" Width="100" DisplayMemberBinding="{Binding PassportSeries}"/>
                    <GridViewColumn Header="Номер" Width="100" DisplayMemberBinding="{Binding PassportNumber}"/>
                    <GridViewColumn Header="Телефон" Width="120" DisplayMemberBinding="{Binding PhoneNumber}"/>
                    <GridViewColumn Header="Email" Width="150" DisplayMemberBinding="{Binding Email}"/>
                  
                    <GridViewColumn Header="Действия" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="✏️" ToolTip="Редактировать" Click="EditClientButton_Click" 
                                    Margin="2" Padding="5" Background="Transparent" BorderThickness="0"/>
                                    <Button Content="❌" ToolTip="Удалить" Click="DeleteClientButton_Click" 
                                    Margin="2" Padding="5" Background="Transparent" BorderThickness="0"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статус -->
        <TextBlock Grid.Row="5" Grid.ColumnSpan="3" x:Name="StatusTextBlock" Margin="0,10,0,0" Foreground="Gray"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Очистить фильтры" Click="ClearFiltersButton_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Обновить" Click="RefreshButton_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>